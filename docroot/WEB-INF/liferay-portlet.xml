<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
	
		
		<portlet-name>view-calendar</portlet-name>
		<icon>/icon.png</icon>
		
		<scheduler-entry>
				<!-- http://www.cronmaker.com/ -->
				<scheduler-description>
					This scheduler is used cehck if there are events in Calendar and trigger remind email/sms
				</scheduler-description>
	 			<scheduler-event-listener-class>
	 			com.telecomlab.calendar.scheduler.MySchedulerCalendarInDayJobListener
	 			</scheduler-event-listener-class>
	 			<trigger>
	 				<cron>
	 					<cron-trigger-value>0 0/10 * 1/1 * ? *</cron-trigger-value>
	 				</cron>
	 			</trigger>
 		</scheduler-entry>
 		
 		
		<instanceable>false</instanceable>
    	<header-portlet-css>/css/main.css</header-portlet-css>
    	<header-portlet-javascript>/js/main.js</header-portlet-javascript>   
    	
 		

	</portlet>
	
	
	
	
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>